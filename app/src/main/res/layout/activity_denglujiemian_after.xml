<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="414dp"
        android:layout_height="605dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView_saoyisao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/saoyisao" />

        <EditText
            android:id="@+id/edittext_shouyesousuo"
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/imageView_saoyisao"
            android:background="@drawable/editsharp"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/edittext_shouyesousuo"
            app:srcCompat="@mipmap/sousuo" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/looper_pager"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/imageView2"></androidx.viewpager.widget.ViewPager>

        <ImageView
            android:id="@+id/shouye_page1"
            android:layout_width="406dp"
            android:layout_height="40dp"
            android:layout_below="@id/looper_pager"
            android:layout_marginTop="20dp"
            android:background="@color/color_useBlue" />

        <TableRow
            android:id="@+id/shouye_shagnpin1"
            android:layout_width="397dp"
            android:layout_height="90dp"
            android:layout_below="@id/shouye_page1">


            <ImageView
                android:id="@+id/dingdan1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/yangwanou" />

            <TextView
                android:id="@+id/TextView_a_text1"
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="已签收\n XX快递：您的快件已签收，如......"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TextView_a_text2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:text="点击查询"
                android:textColor="@color/color_useBlue" />


        </TableRow>

        <ImageView
            android:id="@+id/shouye_xian_1"
            android:layout_width="406dp"
            android:layout_height="1dp"
            android:layout_below="@id/shouye_shagnpin1"
            android:layout_marginTop="1dp"
            android:background="@color/color_useBlue" />

        <TableRow
            android:id="@+id/shouye_shagnpin2"
            android:layout_width="397dp"
            android:layout_height="90dp"
            android:layout_below="@id/shouye_page1"
            android:layout_marginTop="93dp">


            <ImageView
                android:id="@+id/dingdan2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/yangwanou" />

            <TextView
                android:id="@+id/TextView_b_text1"
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="已签收\n XX快递：您的快件已签收，如......"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TextView_b_text2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:text="点击查询"
                android:textColor="@color/color_useBlue" />


        </TableRow>

        <ImageView
            android:id="@+id/shouye_xian_2"
            android:layout_width="406dp"
            android:layout_height="1dp"
            android:layout_below="@id/shouye_shagnpin2"
            android:layout_marginTop="1dp"
            android:background="@color/color_useBlue" />

        <TableRow
            android:id="@+id/shouye_shagnpin3"
            android:layout_width="397dp"
            android:layout_height="90dp"
            android:layout_below="@id/shouye_page1"
            android:layout_marginTop="186dp">


            <ImageView
                android:id="@+id/dingdan3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/shouye_page1"
                app:srcCompat="@mipmap/yangwanou" />

            <TextView
                android:id="@+id/TextView_c_text1"
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="已签收\n XX快递：您的快件已签收，如......"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TextView_c_text2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:text="点击查询"
                android:textColor="@color/color_useBlue" />


        </TableRow>

        <ImageView
            android:id="@+id/shouye_xian_3"
            android:layout_width="406dp"
            android:layout_height="1dp"
            android:layout_below="@id/shouye_shagnpin3"
            android:layout_marginTop="3dp"
            android:background="@color/color_useBlue" />

        <TableRow
            android:layout_width="397dp"
            android:layout_height="22dp"
            android:layout_below="@id/shouye_page1"
            android:layout_marginTop="279dp">


            <TextView
                android:id="@+id/TextView_d_text1"
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="查看全部包裹"
                android:textColor="@color/color_useBlue"
                android:textSize="20dp" />


        </TableRow>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@color/color_grey">

            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@mipmap/shouye_blue"></Button>

            <Button
                android:layout_width="40dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/jijian_black"></Button>

            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/yonghu_black"></Button>

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>